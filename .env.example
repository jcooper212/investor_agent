# ABOUTME: Example environment configuration - copy to .env and fill in your keys
# ABOUTME: Required for OpenAI API access and optional service integrations

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_org_id_here

# Model Configuration
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./data/chroma_db

# Data Directories
DATA_DIR=./data
PDF_DIR=./data/pdfs
REPORTS_DIR=./data/reports

# LangChain Configuration (OPTIONAL - for tracing)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langchain_key_here
LANGCHAIN_PROJECT=investor-agent

# Financial Data APIs (OPTIONAL - can be added later)
# FINNHUB_API_KEY=your_finnhub_key_here
# SEC_API_KEY=your_sec_api_key_here
# FRED_API_KEY=your_fred_key_here
